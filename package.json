{
  "name": "boxrec",
  "version": "0.1.1",
  "description": "retrieve information from Boxrec",
  "main": "./dist/index.js",
  "types": "./dist/dist/index.d.ts",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "prepublish": "npm run build",
    "start": "webpack --config webpack.dev.js",
    "test": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:coverage:watch": "jest --coverage --watchAll",
    "test:watch": "jest --watchAll",
    "tslint": "tslint -c tslint.json src/**/*.ts"
  },
  "keywords": [
    "boxrec",
    "boxing"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/cheerio": "^0.22.7",
    "@types/jest": "^22.1.1",
    "@types/request": "^2.47.0",
    "cheerio": "^1.0.0-rc.2",
    "coveralls": "^3.0.0",
    "jest": "^22.2.1",
    "request": "^2.83.0",
    "ts-jest": "^22.0.3",
    "ts-loader": "^3.5.0",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "bugs": {
    "url": "https://github.com/boxing/boxrec/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boxing/boxrec"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "request-promise": "^4.2.2"
  }
}
