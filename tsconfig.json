{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "lib": [
      "dom",
      "es2015",
      "es2016.array.include",
      "es2015.symbol",
      "es2015.iterable",
      "esnext.asynciterable",
      "es2017"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.e2e.ts"
  ]
}
